section.overlay
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0,0,0,0.7)
  position fixed
  z-index 99
  display none

  &.on
    display block

  div.wrap
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width 340px
    border-radius 3px
    background #fff
    position fixed
    overflow hidden
    z-index 999

    div.title
      color dull_purple
      font-size 15px
      font-weight bold
      border-bottom 1px solid light_purple
      background light_gray
      padding horizontal_padding_small

      &.danger
        color pink

    div.close-btn
      top 20px
      right 15px
      transform rotate(45deg)
      -webkit-transform rotate(45deg)
      width 20px
      height 20px
      position absolute
      cursor pointer

      &:before
      &:after
        content ''
        background light_purple_gray
        position absolute

      &:hover
        &:before
        &:after
          background purple_gray

      &:before
        top 8px
        left -1px
        width 20px
        height 1px

      &:after
        top -1px
        left 8px
        width 1px
        height 20px

    div.body
      color dull_purple
      padding 20px

    div.confirm
      background white
      padding 0 20px 20px
      display flex

      button
        width 50%
        height 40px
        font-size 12px
        border-radius 3px
        background white
        margin 0 5px
        cursor pointer
        
        &:hover
          opacity 0.9
        
        &:first-child
          margin-left 0

        &:last-child
          margin-right 0

        &.submit
          color white
          background emerald

          &.danger
            background pink

        &.cancel
          background light_purple_bold

        &.ok
          color white
          background emerald
          margin 0 auto
          display block

    form
      display none

section.popup
  display none




